<MyLabel@Label>:
    font_size: '40sp'
    halign: 'left'
    valign: 'middle'
    text_size: self.size


<MyTextInput@TextInput>
    font_size: 50

<Container>:
    orientation: 'vertical'
    dlina: dlina
    stoyak: stoyak
    dlina2: dlina2
    stoyak2: stoyak2
    vysota: vysota
    dlina_b: dlina_b
    etag: etag
    output_field: output_field
    output_field2: output_field2
    cb: cb

    BoxLayout:
        size_hint: 1, 0.1
        padding: 20, .02, 10, 0.02
        MyLabel:
            size_hint: 0.3, 1
            text: 'Если МУС на последнем этаже:'
        CheckBox:
            id: cb
            size_hint: 0.1, 1
            color: 1, 1, 1, 3
        MyLabel:
            size_hint: 0.1, 1
            text: 'Этаж:'
        MyTextInput:
            id: etag
            size_hint: 0.15, 1

    BoxLayout:
        size_hint: 1, 0.1

        MyLabel:
            size_hint: 0.2, 1
            text: 'Длинна, м.:'

        MyLabel:
            text_size: self.size
            text: 'Этажи через запятую или дефис:'

    BoxLayout:
        size_hint: 1, 0.1

        MyTextInput:
            id: dlina
            size_hint: 0.2, 1
            multiline: False

        MyTextInput:
            id: stoyak
            multiline: False

    BoxLayout:
        size_hint: 1, 0.1

        MyTextInput:
            id: dlina2
            size_hint: 0.2, 1
            multiline: False

        MyTextInput:
            id: stoyak2
            multiline: False

    BoxLayout:
        size_hint: 1, 0.1

        MyLabel:
            text_size: self.size
            text: 'Высота этажей, м:'

        MyLabel:
            text_size: self.size
            text: 'Длины бухт, м:'

    BoxLayout:
        size_hint: 1, 0.1

        MyTextInput:
            id: vysota
            multiline: False

        MyTextInput:
            id: dlina_b
            multiline: False

    BoxLayout:
        size_hint: 1, 0.1

        Button:
            font_size: 25
            text: 'Расчет'
            on_release:
                root.raschet()
        Button:
            font_size: 25
            text: 'Назад'
            on_release:
                root.previous_set()
        Button:
            font_size: 25
            text: 'Вперед'
            on_release:
                root.next_set()

    BoxLayout:
        MyLabel:
            id: output_field
            text:
                '''Инструкция:
                Если МУС на последнем этаже - поставить галочку.
                "Этаж" - номер этажа до которого измерена длина, общий на 2 стояка.
                "Длина" - длина кабеля на выбранный этаж.
                "Этажи" - перечислить нужные этажи, через запятую или дефис (например 3, 5, 7-12).
                "Высота этажей" - высота типичного этажа. Десятичные дроби записывать через ".", а не ",".
                "Длины бухт" - перечислить длины бухт через запятую.'''
        MyLabel:
            id: output_field2
            text:
                'Рекомендуется выбирать не больше 3 бухт остатков, иначе расчет может занять много времени'